<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:textColor="#01579B"
    android:fontFamily="casual"
    android:textStyle="bold"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.online.RegisterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#01579B"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Name: " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAadhar_id"
        android:textColor="#01579B"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_below="@+id/etName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etName"
        android:layout_alignEnd="@+id/etName"
        android:hint="Aadhar_id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#01579B"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:ems="10"
        android:id="@+id/etPassword"
        android:layout_below="@+id/etAadhar_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etAadhar_id"
        android:layout_alignEnd="@+id/etAadhar_id"
        android:hint="Password: " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#01579B"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:ems="10"
        android:id="@+id/etAge"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Age: " />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#01579B"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etres"
        android:layout_below="@+id/etAge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Residence: " />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#01579B"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:ems="10"
        android:id="@+id/etgen"
        android:layout_below="@+id/etres"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Gender: " />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D50000"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:text="Register"
        android:id="@+id/bRegister"
        android:onClick="register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />



</RelativeLayout>
